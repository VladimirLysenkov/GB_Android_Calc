<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/flowers_4931217_1280"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="@integer/column_count"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/result"
            style="@style/CalcTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_gravity="end"
            android:textSize="@dimen/textSizeResult" />

        <TextView
            android:id="@+id/operation"
            style="@style/CalcTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_gravity="end"
            android:textSize="@dimen/textSizeOperations" />

        <EditText
            android:id="@+id/numberField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_gravity="end"
            android:inputType="numberDecimal"
            android:textSize="@dimen/textSizeEditText" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_cleaning"
            style="@style/CalcButton.CalcClearingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:text="@string/cleaning"
            android:textSize="@dimen/textSizeButton" />

        <ImageButton
            android:id="@+id/backspace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:backgroundTint="#808691"
            android:contentDescription="@string/erase"
            app:srcCompat="@drawable/backspace" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_division"
            style="@style/CalcButton.CalcActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onOperationClick"
            android:text="@string/division"
            android:textSize="@dimen/textSizeButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_7"
            style="@style/CalcButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberClick"
            android:text="@string/seven"
            android:textSize="@dimen/textSizeButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_8"
            style="@style/CalcButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberClick"
            android:text="@string/eight"
            android:textSize="@dimen/textSizeButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_9"
            style="@style/CalcButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberClick"
            android:text="@string/nine"
            android:textSize="@dimen/textSizeButton" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_multiplication"
            style="@style/CalcButton.CalcActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onOperationClick"
            android:text="@string/multiplication"
            android:textSize="@dimen/textSizeButton" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_4"
            style="@style/CalcButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberClick"
            android:text="@string/four"
            android:textSize="@dimen/textSizeButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_5"
            style="@style/CalcButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberClick"
            android:text="@string/five"
            android:textSize="@dimen/textSizeButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_6"
            style="@style/CalcButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberClick"
            android:text="@string/six"
            android:textSize="@dimen/textSizeButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_minus"
            style="@style/CalcButton.CalcActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onOperationClick"
            android:text="@string/minus"
            android:textSize="@dimen/textSizeButton" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_1"
            style="@style/CalcButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberClick"
            android:text="@string/one"
            android:textSize="@dimen/textSizeButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_2"
            style="@style/CalcButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberClick"
            android:text="@string/two"
            android:textSize="@dimen/textSizeButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_3"
            style="@style/CalcButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberClick"
            android:text="@string/three"
            android:textSize="@dimen/textSizeButton" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_plus"
            style="@style/CalcButton.CalcActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onOperationClick"
            android:text="@string/plus"
            android:textSize="@dimen/textSizeButton" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_0"
            style="@style/CalcButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:onClick="onNumberClick"
            android:text="@string/zero"
            android:textSize="@dimen/textSizeButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_point"
            style="@style/CalcButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberClick"
            android:text="@string/point"
            android:textSize="@dimen/textSizeButton" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_result"
            style="@style/CalcButton.CalcActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onOperationClick"
            android:text="@string/result"
            android:textSize="@dimen/textSizeButton" />


    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>